<style>
body {
    margin: 0;
    overflow: hidden;
    background: radial-gradient(circle, #1a001f, #000);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    font-family: 'Arial', sans-serif;
    color: white;
    text-align: center;
}

#heart {
    font-size: 120px;
    cursor: pointer;
    animation: pulse 1.5s infinite;
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
}

#message {
    position: absolute;
    font-size: 80px;
    font-weight: bold;
    opacity: 0;
    text-shadow: 0 0 20px #ff4da6, 0 0 40px #ff4da6;
    transition: all 1.5s ease;
}

#hint {
    position: absolute;
    bottom: 50px;
    font-size: 18px;
    opacity: 0;
    transition: opacity 2s ease;
}

#secret {
    position: absolute;
    max-width: 700px;
    font-size: 24px;
    line-height: 1.6;
    opacity: 0;
    transform: scale(0.8);
    transition: all 2s ease;
}

.show {
    opacity: 1 !important;
    transform: scale(1) !important;
}

.falling-heart {
    position: absolute;
    color: pink;
    animation: fall linear infinite;
}

@keyframes fall {
    from { transform: translateY(-10vh); }
    to { transform: translateY(110vh); }
}
